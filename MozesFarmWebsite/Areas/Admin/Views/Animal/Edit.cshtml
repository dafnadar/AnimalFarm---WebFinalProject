@model WebProject.Models.Animal

@{
	ViewBag.Title = "Edit";
}

<h1>Edit</h1>

<h4>Animal</h4>
<hr />
<div class="row">	
	<div class="col-md-4">
		<form asp-action="Edit" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Id" />
			<div class="form-group">
				<label asp-for="Type" class="control-label"></label>
				<input asp-for="Type" class="form-control" />
				<span asp-validation-for="Type" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Age" class="control-label"></label>
				<input asp-for="Age" class="form-control" />
				<span asp-validation-for="Age" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PictureName" class="control-label"></label>
				<input asp-for="PictureName" class="form-control" readonly="readonly" />
				<span asp-validation-for="PictureName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="PictureInfo" class="form-label" for="customFile"></label>
				<input asp-for="PictureInfo" type="file" class="form-control" id="customFile" />
				<span asp-validation-for="PictureInfo" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label"></label>
				<input asp-for="Description" class="form-control" />
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CategoryId" class="control-label"></label>
				<select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryNames"></select>
				<span asp-validation-for="CategoryId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Save" class="btn btn-primary" />
			</div>
		</form>
	</div>
	<div class="col-md-3 d-flex justify-content-end">
		<img src="/images/@Model.PictureName" alt="Sorry, no picture" class="card-img-top" style="height:12rem;">
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

