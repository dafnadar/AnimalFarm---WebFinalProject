@model IEnumerable<WebProject.Models.Animal>
@{
	ViewBag.Title = "Catalog";
}


<article class="text-center">
	<section>
		<h1 class="display-4">Meet Our Farm Animals</h1>
		<label for="catagory">Catagory:</label>

		<form id="CategoryForm" action="/Home/Catalog/id" method="post">
			<select name="id" id="id" onchange="SubmitForm()">
				<option value="0" id="0">Choose</option>
				<option value="0" id="0">All</option>
				@foreach (var category in @ViewBag.Categories)
				{
					<option value="@category.Id" id="@category.Id">@category.Name</option>
				}
			</select>
		</form>
	</section>

	<div class="row">
		@foreach (var animal in Model)
		{
			<div class="col-sm-3 ">
				<div class="card border-secondary mb-3 mt-3" style="width: 18rem; height:22rem;">
					<img src="/images/@animal.PictureName" alt="Sorry, no picture" class="card-img-top" style="height:12rem;">
					<div class="card-body">
						<h5 class="card-title">@animal.Name</h5>
						<p class="card-text">@animal.Description</p>
						<a asp-action="ShowAnimal" asp-route-id="@animal.Id" class="btn btn-primary">Read More</a>
					</div>
				</div>
			</div>
		}
	</div>
</article>

